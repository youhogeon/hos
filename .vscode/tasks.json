{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make all",
      "type": "shell",
      "command": "make clean && make all",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "problemMatcher": []
    },
    {
      "label": "run qemu",
      "type": "shell",
      "dependsOn": "make all",
      "command": "qemu-system-x86_64 -L . -m 64 -fda ./disk.img -display vnc=0.0.0.0:0 -audiodev none,id=none",
      "options": {
        "cwd": "${workspaceFolder}/src",
      }
    }
  ]
}
